<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorblue"
    tools:context=".menulevel.blue.BlueLevelSelectTheSentence">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="50dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.etrack.test.FontText
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/select_the_sentence_title"
                android:gravity="center"
                android:textSize="20sp"
                android:layout_margin="20dp"
                android:textColor="@color/white"
                android:layout_gravity="center">
            </com.etrack.test.FontText>

            <com.etrack.test.FontText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/select_the_sentence1"
                android:textSize="20sp"
                android:layout_margin="5dp"
                android:textColor="@color/white"
                android:layout_gravity="center">
            </com.etrack.test.FontText>
            <com.etrack.test.FontText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/select_the_sentence2"
                android:textSize="20sp"
                android:layout_margin="5dp"
                android:textColor="@color/white"
                android:layout_gravity="center">
            </com.etrack.test.FontText>
            <com.etrack.test.FontText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/select_the_sentence3"
                android:textSize="20sp"
                android:layout_margin="5dp"
                android:textColor="@color/white"
                android:layout_gravity="center">
            </com.etrack.test.FontText>
            <com.etrack.test.FontText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/select_the_sentence4"
                android:textSize="20sp"
                android:layout_margin="5dp"
                android:textColor="@color/white"
                android:layout_gravity="center">
            </com.etrack.test.FontText>

            <RelativeLayout
                android:id="@+id/sh_green_firstrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/sh_green_title"
                android:orientation="horizontal"
                android:layout_gravity="center_horizontal">

                <LinearLayout
                    android:id="@+id/sheep"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="15dp"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:background="@drawable/green_level_fillintheblank_img_background"
                        android:src="@mipmap/brinjal">
                    </ImageView>
                    <com.etrack.test.FontText
                        android:id="@+id/font_text1"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ems="7"
                        android:onClick="first"
                        android:padding="5dp"
                        android:textColor="@color/colorblue"
                        android:gravity="center"
                        android:background="@drawable/green_level_fillintheblank_img_background"
                        android:layout_marginTop="10dp">
                    </com.etrack.test.FontText>

                </LinearLayout>
                <LinearLayout
                    android:id="@+id/ship"
                    android:layout_margin="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_toRightOf="@+id/sheep">

                    <ImageView
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:src="@mipmap/brick_pending"
                        android:background="@drawable/green_level_fillintheblank_img_background">
                    </ImageView>
                    <com.etrack.test.FontText
                        android:id="@+id/font_text2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ems="7"
                        android:onClick="second"
                        android:layout_gravity="center"
                        android:textColor="@color/colorblue"
                        android:gravity="center"
                        android:padding="5dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/green_level_fillintheblank_img_background">
                    </com.etrack.test.FontText>

                </LinearLayout>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/sh_green_secoundrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_below="@+id/sh_green_firstrow"
                >

                <LinearLayout
                    android:id="@+id/shop"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="15dp"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:background="@drawable/green_level_fillintheblank_img_background"
                        android:src="@mipmap/brim">
                    </ImageView>
                    <com.etrack.test.FontText
                        android:id="@+id/font_text3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ems="7"
                        android:onClick="third"
                        android:textColor="@color/colorblue"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:padding="5dp"
                        android:background="@drawable/green_level_fillintheblank_img_background"
                        android:layout_marginTop="10dp">
                    </com.etrack.test.FontText>

                </LinearLayout>
                <LinearLayout
                    android:id="@+id/shut"
                    android:layout_margin="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_toRightOf="@+id/shop">

                    <ImageView
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:src="@mipmap/bracket"
                        android:background="@drawable/green_level_fillintheblank_img_background">

                    </ImageView>
                    <com.etrack.test.FontText
                        android:id="@+id/font_text4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ems="7"
                        android:onClick="fourth"
                        android:layout_gravity="center"
                        android:padding="5dp"
                        android:textColor="@color/colorblue"
                        android:gravity="center"
                        android:background="@drawable/green_level_fillintheblank_img_background"
                        android:layout_marginTop="10dp">
                    </com.etrack.test.FontText>

                </LinearLayout>


            </RelativeLayout>

        </LinearLayout>


    </ScrollView>
    <ImageView
        android:id="@+id/previous"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="10dp"
        android:onClick="previous"
        android:layout_alignParentBottom="true"
        app:srcCompat="@mipmap/icon_back_on" />
    <ImageView
        android:id="@+id/next"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="10dp"
        android:onClick="next"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        app:srcCompat="@mipmap/icon_forward_on" />


</RelativeLayout>